<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
    app:srcCompat="@android:color/holo_red_dark"
    android:id="@+id/health1"
    android:layout_height="20dp"
    android:layout_width="30dp"
        android:layout_marginLeft = "40dp"
        android:layout_marginTop = "140dp"
        />

    <ImageView
        app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/health2"
        android:layout_height="20dp"
        android:layout_width="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop = "140dp"
        />

    <ImageView
        app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/health3"
        android:layout_height="20dp"
        android:layout_width="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop = "140dp"
        />

    <ImageView
        app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/health4"
        android:layout_height="20dp"
        android:layout_width="30dp"
        android:layout_marginLeft = "130dp"
        android:layout_marginTop = "140dp"
        />

    <ImageView
        app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/health5"
        android:layout_height="20dp"
        android:layout_width="30dp"
        android:layout_marginLeft = "160dp"
        android:layout_marginTop = "140dp"
        />

    <ImageView
        app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/health6"
        android:layout_height="20dp"
        android:layout_width="30dp"
        android:layout_marginLeft = "190dp"
        android:layout_marginTop = "140dp"
        />

    <ImageView
        app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/health7"
        android:layout_height="20dp"
        android:layout_width="30dp"
        android:layout_marginLeft = "220dp"
        android:layout_marginTop = "140dp"
        />

    <ImageView
        app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/health8"
        android:layout_height="20dp"
        android:layout_width="30dp"
        android:layout_marginLeft = "250dp"
        android:layout_marginTop = "140dp"
        />



    <TextView
        android:text="ENEMY HEALTH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop = "95dp"
        android:id="@+id/textView2"
        android:textSize="28sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="(Shake To Fight!)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/textView3"
        android:textSize="20sp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:textSize="100sp"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Time Remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:layout_below="@+id/health7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

</RelativeLayout>