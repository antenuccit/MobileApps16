<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_create_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="osucse5236.chooseyourownadventure.CreateNewActivity"
                android:background="@drawable/stone_violet"
                android:backgroundTint="@color/backgroundTint"
                android:backgroundTintMode="multiply">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/message"
        android:text="Choose an account name and password to be associated with your new character"
        android:textAlignment="center" />

    <TextView
        android:text="New Account Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/message"
        android:layout_alignStart="@+id/newAccountName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="56dp"
        android:id="@+id/newPassword"
        android:layout_below="@+id/newAccountName"
        android:layout_alignStart="@+id/newAccountName"
        android:hint="@string/prompt_password"
        android:textColorHint="@color/common_google_signin_btn_text_dark"
        android:imeActionLabel="@string/action_create_new"
        android:imeActionId="@+id/createNew"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"/>

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newAccountName"
        android:layout_alignStart="@+id/newPassword"
        android:layout_marginTop="30dp"
        android:id="@+id/textView3"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="33dp"
        android:id="@+id/newAccountName"
        android:layout_alignTop="@+id/textView2"
        android:hint="Account Name"
        android:textColorHint="@color/common_google_signin_btn_text_dark"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Create New Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:id="@+id/createButton"
        android:textColor="@color/buttonText"
        android:background="@drawable/stone_button"
        android:elevation="0dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp" />
</RelativeLayout>