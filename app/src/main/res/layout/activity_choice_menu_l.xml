<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/stone_violet"
    android:backgroundTint="@color/backgroundTint"
    android:backgroundTintMode="multiply"
    tools:context="osucse5236.chooseyourownadventure.ChoiceMenu">

    <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:id="@+id/story_text"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">

        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/option_1"
            android:textColor="@color/buttonText"
            android:background="@drawable/stone_button"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textSize="10sp"
            android:layout_marginBottom="4dp" />

        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/option_2"
            android:textColor="@color/buttonText"
            android:background="@drawable/stone_button"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textSize="10sp"
            android:layout_marginBottom="4dp" />

        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/option_3"
            android:textSize="10sp"
            android:textColor="@color/buttonText"
            android:background="@drawable/stone_button"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_marginBottom="24dp" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center">

        <Button
        android:layout_margin="0dp"
        android:id="@+id/stats_button"
        android:text="@string/stats_button"
            android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:textSize="10sp"
            android:layout_width="200dp"
            android:textColor="@color/buttonText"
            android:background="@drawable/stone_button2"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"  />

    </LinearLayout>

</FrameLayout>
